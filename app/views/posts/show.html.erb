<h1>投稿詳細</h1>
<p><%= notice %></p>

<p>タイトル: <%= @post.title %></p>
<p>内容: <%= @post.content %></p>
<p>画像: <%= image_tag @post.image %></p>
<%= link_to 'Edit', edit_post_path(@post) %> |

<% if @post.user_id == current_user.id %>
  <%= link_to "編集する", edit_post_path(@post.id) %>
  <%= link_to '削除する', post_path(@post.id), method: :delete,data: { confirm: '本当に削除しますか？'} %>
<% end %>

<% if @favorite.present? %>
  <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
<% end %>

<%= link_to'投稿一覧に戻る', posts_path %>
