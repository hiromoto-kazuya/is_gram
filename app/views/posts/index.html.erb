<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>アカウント画像</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= image_tag post.user.image, class: "profile_image for_index" %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= image_tag post.image %></td>
    <td><%= link_to '詳細を見る', post_path(post.id) %></td>

  </tr>
<% end %>
</table>
