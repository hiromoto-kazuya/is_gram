<% @favorite = current_user.favorites.find_by(post_id: post.id) %>
<% if @favorite.present? %>
  <%= link_to favorite_path(id: @favorite.id), method: :delete, remote: true do %>
    <%= image_tag "color-heart.png", class: "favorite-heart unfavorite-btn" %>
  <% end %>
  <div class = "like-count">
    いいね！<%= post.favorites.count %>件
  </div>
<% else %>
  <%= link_to favorites_path(post_id: post), method: :post, remote: true do %>
    <%= image_tag "non-color-heart.png", class: "favorite-heart favorite-btn" %>
  <% end %>
  <div class = "like-count">
    いいね！<%= post.favorites.count %>件
  </div>
<% end %>
