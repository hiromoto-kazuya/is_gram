<div class = "form-wrapper">
  <div class = "form-container">
    <h1 class ="logo">Clonegram</h1>
    <div class="form-inline">
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

        <div class = "form-group">
          <%= f.email_field :email, class: "form-control",
                            placeholder: "メールアドレス" %>
        </div>
        <div class = "form-group">
          <%= f.password_field :password, class: "form-control",
                                placeholder: "パスワード(6文字以上)" %>
        </div>

        <%= f.submit "ログイン", class: "btn login-btn" %>

        <div class = "mini-text">
          <div class = "line line-left"></div>
          または
          <div class = "line line-right"></div>
        </div>

        <%= link_to "Facebookでログイン", ("#"), class: "facebook-login" %>

        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

        <%= link_to "パスワードを忘れた場合", ("#"), class: "for_forget_password" %>

      <% end %>
   </div>
  </div>
</div>

<div class = "login_link">
  <div class = "login" >
    アカウントをお持ちでないですか？
    <%= link_to "登録する", new_user_path %>
  </div>
</div>
